<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragments.addNote">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/audio"
            style="@style/Widget.AppCompat.Button.Colored"
            android:theme="@style/ThemeOverlay.MyDarkButton"
            android:layout_marginBottom="16dp"
            android:layout_gravity="bottom|right"
            android:layout_marginVertical="70dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonCamara"
            style="@style/Widget.AppCompat.Button.Colored"
            android:theme="@style/ThemeOverlay.MyDarkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camara"
            android:layout_marginBottom="16dp"
            android:layout_gravity="bottom|right"
            android:layout_marginVertical="130dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/save"
            android:layout_gravity="top|right"
            android:layout_marginTop="70dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:theme="@style/ThemeOverlay.MyDarkButton"/>

    <include
            xmlns:android="http://schemas.android.com/apk/res/android"
            layout="@layout/activity_bar"
            android:layout_width="match_parent" android:layout_height="match_parent"/>

    <LinearLayout android:layout_width="match_parent" android:layout_marginTop="70dp"  android:orientation="vertical" android:layout_height="match_parent">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView  android:layout_width="wrap_content" android:id="@+id/prueba"
                          android:layout_height="wrap_content" android:text="CONTENT" android:textColor="@color/main"/>
                <EditText android:layout_width="300dp" android:layout_height="wrap_content"
                          android:id="@+id/content"
                          android:textSize="11dp"
                          android:hint="Write Here"
                          android:inputType="textMultiLine"
                          android:outlineSpotShadowColor="@android:color/black"
                          android:textColorHighlight="@android:color/black"
                          android:textColor="@android:color/black"
                          android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                          style="@style/Base.Widget.MaterialComponents.TextInputEditText"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>